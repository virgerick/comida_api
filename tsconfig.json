{
    "compilerOptions": {
      "strict": true,  
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "rootDir": "./src",  
      "skipLibCheck": true,  
      "forceConsistentCasingInFileNames": true,

      "baseUrl": ".",
      "paths": {
        "*": ["node_modules/*"]
      }
    },
    "include": ["src/**/*"]
  }